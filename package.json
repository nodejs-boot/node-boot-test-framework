{
    "name": "@nodeboot/test-framework",
    "version": "1.0.3",
    "description": "Test framework for Node Boot applications. Allows to easily create integration and unit tests using your preferred test library.",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "private": "true",
    "keywords": [
        "nodejs",
        "boot",
        "framework",
        "tests",
        "integration-tests",
        "jest",
        "koa",
        "fastify",
        "express",
        "http"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot-test-framework.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7.5.1"
    },
    "main": "dist/index.js",
    "types": "src/index.ts",
    "scripts": {
        "build": "turbo run build",
        "build:clean": "turbo run clean:build",
        "dev": "turbo run dev",
        "lint-format": "turbo run --parallel lint format ",
        "lint-format:fix": "turbo run --parallel lint:fix format:fix",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "test": "turbo run --parallel test",
        "typecheck": "turbo run --parallel typecheck",
        "typecheck:full": "tsc --skipLibCheck false --incremental false",
        "memoryleak:detect": "timeout 30s node memory-leak-detector.js",
        "prepare": "husky install",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "format:check": "prettier --check '{packages,samples,servers,starters,tests}/**/{package.json,src/*.tsx,src/*.ts}'",
        "format:fix": "prettier --write '{packages,samples,servers,starters,tests}/**/{package.json,src/*.tsx,src/*.ts}'",
        "git:prune": "git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done",
        "nodeboot:update": "turbo run nodeboot:update",
        "npm:prune": "pnpm store prune && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
        "release:changeset": "pnpm changeset",
        "release:version": "pnpm changeset version",
        "release:status": "pnpm changeset status",
        "release:publish": "pnpm changeset publish",
        "release": "pnpm run lint-format:fix && pnpm run build && pnpm run release:status && pnpm run release:version && pnpm run release:publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@jest/globals": "^29.5.0",
        "@swc/core": "^1.3.41",
        "@swc/jest": "^0.2.24",
        "@tsconfig/node-lts-strictest": "^18.12.1",
        "@types/jest": "^29.5.11",
        "@types/memwatch-next": "^0.3.6",
        "@types/node": "^22.14.1",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "clinic": "^13.0.0",
        "eslint": "^8.31.0",
        "eslint-config-katxupa": "^1.0.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^4.4.3",
        "eslint-plugin-import": "^2.27.5",
        "husky": "^8.0.0",
        "jest": "^29.5.0",
        "lint-staged": "^13.1.2",
        "memwatch-next": "^0.3.0",
        "nodemon": "^2.0.21",
        "pinst": "^3.0.0",
        "prettier": "^2.8.3",
        "prettier-plugin-organize-imports": "^3.2.4",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "turbo": "^2.3.3",
        "typescript": "^5.9.2"
    },
    "resolutions": {
        "typeorm": "0.3.27"
    },
    "files": [
        "dist",
        "package.json",
        "README.md",
        "config.d.ts"
    ],
    "configSchema": "config.d.ts",
    "packageManager": "pnpm@10.17.1"
}
