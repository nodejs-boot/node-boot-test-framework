{
    "name": "@nodeboot/test",
    "version": "1.6.0",
    "description": "Test framework for Node_Boot projects",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "keywords": [
        "tests",
        "node-boot"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot-test-framework.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "nodemon",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "jest --passWithNoTests",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@nodeboot/config": "^1.3.3",
        "@nodeboot/context": "^2.0.0",
        "@nodeboot/core": "^1.15.2",
        "winston": "^3.10.0"
    },
    "optionalDependencies": {
        "axios": "^1.7.9",
        "pactum": "^3.7.6",
        "supertest": "^7.0.0",
        "typeorm": "^0.3.27"
    },
    "peerDependencies": {
        "testcontainers": "^11.7.2"
    },
    "peerDependenciesMeta": {
        "testcontainers": {
            "optional": true
        }
    },
    "devDependencies": {
        "@types/supertest": "^6.0.2"
    },
    "files": [
        "dist",
        "package.json",
        "README.md",
        "config.d.ts"
    ]
}
