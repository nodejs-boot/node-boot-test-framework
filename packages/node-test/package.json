{
    "name": "@nodeboot/node-test",
    "version": "1.0.0",
    "description": "Test framework for Node_Boot projects using node:test",
    "author": "Manuel Santos <ney.br.santos@gmail.com>",
    "license": "MIT",
    "keywords": [
        "tests",
        "node-boot",
        "vitest"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nodejs-boot/node-boot-test-framework.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean:build": "rimraf ./dist",
        "dev": "NODE_ENV=development tsx watch src",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@nodeboot/context": "^2.1.0",
        "@nodeboot/core": "^1.15.3",
        "@nodeboot/test": "workspace:^",
        "@sinonjs/fake-timers": "^11.3.1"
    },
    "files": [
        "dist",
        "package.json",
        "README.md",
        "config.d.ts"
    ]
}
